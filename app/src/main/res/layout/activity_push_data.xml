<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_reso"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv1"
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#000"
      android:text="Reso" />
    
    <TableLayout
        android:id="@+id/tlSO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       </TableLayout>
       
     <View
          android:id="@+id/view1"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#bfbfbf" />
     
    <TextView
      android:id="@+id/tv2"
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#000"
      android:text="Activity" />
    
    <TableLayout
      android:id="@+id/tlActivity"
        android:layout_width="match_parent"
       android:layout_height="wrap_content" >
       </TableLayout>
       
     <View
          android:id="@+id/view2"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#bfbfbf" />
     
    <TextView
      android:id="@+id/tv3"
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#000"
      android:text="Customer Base" />
    
    <TableLayout
      android:id="@+id/tl_cb"
        android:layout_width="match_parent"
       android:layout_height="wrap_content" >
       </TableLayout>

    <View
          android:id="@+id/view3"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#bfbfbf" />
     
    <TextView
      android:id="@+id/tv4"
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#000"
      android:text="Absen" />
    
    <TableLayout
      android:id="@+id/tl_absen"
        android:layout_width="match_parent"
       android:layout_height="wrap_content" >
       </TableLayout>
       
    <View
          android:id="@+id/view4"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#bfbfbf" />
     
    <TextView
      android:id="@+id/tv5"
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#000"
      android:text="Leave" />
    
    <TableLayout
      android:id="@+id/tl_leave"
        android:layout_width="match_parent"
       android:layout_height="wrap_content" >
       </TableLayout>
       
    <View
          android:id="@+id/view5"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#bfbfbf" />

        <Button
            android:id="@+id/btnPush"
             android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/btn_download_all"
            android:text="Push Data" />

</LinearLayout>
    </ScrollView>
