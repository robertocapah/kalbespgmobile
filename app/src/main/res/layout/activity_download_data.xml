<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="top|center"
    android:orientation="vertical"
    android:background="#0000"
    tools:context="com.kalbenutritionals.app.kalbespgmobile.DownloadData" >

            <TextView
                android:id="@+id/txtBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textColor="#000" />

 			<View
 			    android:id="@+id/view1"
 			    android:layout_width="fill_parent"
 			    android:layout_height="2dp"
 			    android:background="#007F92" />

 			 <Spinner
 			     android:id="@+id/spnBranch"
 			     android:layout_width="match_parent"
 			     android:layout_height="wrap_content"
 			     />
			
			<Button
                    android:id="@+id/btnBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Branch" />
			
			<TextView
			    android:id="@+id/txtOutlet"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Outlet"
			    android:textColor="#000" />

			<View
			    android:id="@+id/view2"
			    android:layout_width="fill_parent"
			    android:layout_height="2dp"
			    android:background="#007F92" />

            <Spinner
                android:id="@+id/spnOutlet"
                style="@drawable/shape_rounded_blue_rect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
			
			<Button
                    android:id="@+id/btnOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Outlet" />
            

			<TextView
                android:id="@+id/txtProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textColor="#000" />
			<View
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#007F92" />

            <Spinner
                android:id="@+id/spnProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
			
			<Button
                    android:id="@+id/btnProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Product" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Brand"
		android:id="@+id/textView7"
		android:layout_gravity="center_horizontal"
		android:textColor="#000" />
	<View
		android:id="@+id/view9"
		android:layout_width="fill_parent"
		android:layout_height="2dp"
		android:background="#007F92" />
	<Spinner
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/spnBrand" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Download Brand"
		android:id="@+id/btnDlBrand" />


	<TextView
                android:id="@+id/txtVwLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Leave"
                android:textColor="#000" />
			<View
                android:id="@+id/view5"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#007F92" />
            <Spinner
                android:id="@+id/spnLeave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
			
			<Button
                    android:id="@+id/btnLeave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Leave" />

	<Button
                    android:id="@+id/btnAllDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download All" />
	</LinearLayout>

