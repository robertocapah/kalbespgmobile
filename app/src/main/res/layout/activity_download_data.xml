<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="center_vertical|top"
    android:orientation="vertical"
	android:paddingBottom="5dp"
	android:paddingLeft="5dp"
	android:paddingRight="5dp"
	android:paddingTop="5dp"
	android:background="#ffffff"
	android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true"
    tools:context="com.kalbenutritionals.app.kalbespgmobile.FragmentDownloadData" >
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

            <TextView
                android:id="@+id/txtBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch"
				android:layout_marginTop="15dp"
				android:layout_marginLeft="10dp"
                android:textColor="#000" />
			<Spinner
				android:id="@+id/spnType"
				android:layout_below="@+id/txtBranch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:background="@drawable/bg_edtext"
				/>
			<Button
				android:id="@+id/btnBranch"
				android:layout_below="@+id/spnType"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/btn_on_click"
				android:text="Download Branch" />
			<View
				android:id="@+id/view1"
				android:layout_marginTop="10dp"
				android:layout_below="@+id/btnBranch"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#bfbfbf" />

			<TextView
				android:id="@+id/txtOutlet"
				android:layout_below="@+id/view1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Outlet"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:textColor="#000" />
			<Spinner
				android:id="@+id/spnOutlet"
				android:layout_below="@+id/txtOutlet"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:background="@drawable/bg_edtext"
				/>
			<Button
				android:id="@+id/btnOutlet"
				android:layout_below="@+id/spnOutlet"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/btn_on_click"
				android:text="Download Outlet" />
			<View
				android:id="@+id/view2"
				android:layout_below="@+id/btnOutlet"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginTop="10dp"
				android:background="#bfbfbf" />

			<TextView
				android:id="@+id/txtProduct"
				android:layout_below="@+id/view2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Product"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:textColor="#000" />
			<Spinner
				android:id="@+id/spnProduct"
				android:layout_below="@+id/txtProduct"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:background="@drawable/bg_edtext"
				/>
			<Button
				android:id="@+id/btnProduct"
				android:layout_below="@+id/spnProduct"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Download Product"
				android:layout_marginTop="5dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/btn_on_click"/>
			<View
				android:id="@+id/view3"
				android:layout_below="@+id/btnProduct"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginTop="10dp"
				android:background="#bfbfbf" />

			<TextView
				android:id="@+id/textView7"
				android:layout_below="@id/view3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Brand"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:textColor="#000" />
			<Spinner
				android:id="@+id/spnBrand"
				android:layout_below="@id/textView7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:background="@drawable/bg_edtext"/>
			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Download Brand"
				android:id="@+id/btnDlBrand"
				android:layout_below="@+id/spnType"
				android:layout_marginTop="5dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/btn_on_click"/>
			<View
				android:id="@+id/view9"
				android:layout_below="@+id/btnDlBrand"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginTop="10dp"
				android:background="#bfbfbf" />

				<TextView
					android:id="@+id/txtVwLeave"
					android:layout_below="@+id/view9"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Type Leave"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					android:textColor="#000" />
				<Spinner
					android:id="@+id/spnLeave"
					android:layout_below="@+id/txtVwLeave"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:background="@drawable/bg_edtext"
					/>
				<Button
					android:id="@+id/btnLeave"
					android:layout_below="@+id/spnLeave"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Download Leave"
					android:layout_marginTop="5dp"
					android:layout_gravity="center_horizontal"
					android:background="@drawable/btn_on_click"/>
				<View
					android:id="@+id/view5"
					android:layout_below="@+id/btnLeave"
					android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:layout_marginTop="10dp"
					android:background="#bfbfbf" />

				<Button
					android:id="@+id/btnAllDownload"
					android:layout_below="@+id/view5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Download All"
					android:textColor="@color/white"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="20dp"
					android:layout_gravity="center_horizontal"
					android:background="@drawable/btn_download_all"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

